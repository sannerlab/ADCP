#!/bin/sh

#
# --- TSRI, Michel Sanner Copyright 2019 ---
#
# get absolute path to the installation directory
ADS_ROOT="`python -Sc "print(__import__('os').path.realpath(r'$0' '/../..'))"`"

export ADS_ROOT


export PYTHONNOUSERSITE="disable"
export LD_LIBRARY_PATH="$LD_LIBRARY_PATH:$ADS_ROOT/lib"

if [ -n "$PYTHONPATH" ]; then
        unset PYTHONPATH
fi 

if test $# -gt 0
then
    echo "No arguments are expected."
else
    exec python $ADS_ROOT/lib/python*/site-packages/ADCP/utilities/libFileMaker/genSwissLib.py
#     exec python $ADS_ROOT/adcptools/libFileMaker/genSwissLib.py
fi
    
